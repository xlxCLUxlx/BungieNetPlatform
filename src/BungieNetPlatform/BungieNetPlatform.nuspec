<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
    <metadata>
        <!-- The identifier that must be unique within the hosting gallery -->
        <id>BungieNetPlatform</id>
        <title>BungieNetPlatform Swagger Library</title>

        <!-- The package version number that is used when resolving dependencies -->
        <version>2.1.3</version>

        <!-- Authors contain text that appears directly on the gallery -->
        <authors>Eric Boulden</authors>
		
		<projectUrl>https://github.com/xlxCLUxlx/BungieNetPlatform</projectUrl>

        <!-- Owners are typically nuget.org identities that allow gallery
             users to earily find other packages by the same owners.  -->
        <owners>Eric Boulden</owners>
        <requireLicenseAcceptance>true</requireLicenseAcceptance>
        <developmentDependency>false</developmentDependency>

        <!-- The description can be used in package manager UI. Note that the
             nuget.org gallery uses information you add in the portal. -->
        <description>A library for the Bungie.net Destiny 2 API</description>
        <copyright>https://www.bungie.net/en/View/Bungie/terms</copyright>
        <licenseUrl>https://github.com/Bungie-net/api/blob/master/LICENSE</licenseUrl>
		<releaseNotes>
			Corrected issue with DestinyMiscDestinyColor being set to byte rather than int.
			Corrected issue where instances of IDictionary where not being properly implemented within the mustache template for generating this code.
		</releaseNotes>

        <!-- Dependencies are automatically installed when the package is installed -->
        <dependencies>

            <dependency id="NewtonSoft.Json" version="10.0.3" />
            <dependency id="RestSharp" version="105.1.0" />

        </dependencies>
		<tags>C# Bungie Rest API Destiny</tags>	
    </metadata>
    <files>

        <!-- A readme.txt will be displayed when the package is installed -->
        <file src="..\..\README.md" target="" />
        <file src="..\..\docs\**\*.*" target="docs" />

    </files>
</package>
